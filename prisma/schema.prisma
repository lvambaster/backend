// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// criar uma migration: yarn prisma migrate dev
model Motoqueiro {
  id         Int         @id @default(autoincrement())
  name       String
  telefone   String?
  password   String       // senha do motoqueiro
  pagamentos Pagamento[]
}

model Pagamento {
  id               Int        @id @default(autoincrement())
  motoqueiro       Motoqueiro @relation(fields: [motoqueiroId], references: [id])
  motoqueiroId     Int
  valorPago        Float
  quantidadeEntregas Int      // nova coluna para quantidade de entregas
  dataPagamento    DateTime   @default(now())
  observacao       String?
}